<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/employee_card_size"
    android:background="@drawable/bg_card"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_size"
        android:contentDescription="@string/photo" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_intern"
        android:layout_marginRight="@dimen/padding_intern"
        android:layout_marginTop="@dimen/padding_intern"
        android:textColor="@color/text_name"
        android:textSize="@dimen/text_xlarge" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_intern"
        android:layout_marginRight="@dimen/padding_intern"
        android:textColor="@color/text_title"
        android:textSize="@dimen/text_large" />

    <TextView
        android:id="@+id/user_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_intern"
        android:layout_marginRight="@dimen/padding_intern"
        android:layout_marginTop="@dimen/padding_intern"
        android:textColor="@color/text_bio"
        android:textSize="@dimen/text_medium" />

</LinearLayout>